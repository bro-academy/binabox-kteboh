{% macro picture(classes, src, sources, alt, width, height, position, fit) %}
	<picture>
		{% for source in sources %}
			<source srcset="/src/assets/images/{{ picture.source.src }}" type="image/{{ picture.source.type }}">
		{% endfor %}
		<img class="{{ classes }}" src="/src/assets/images/{{ picture.src }}" alt="{{ picture.alt }}" loading="lazy" decoding="async" width="{{ width }}" height="{{ picture.height }}" style="object-position: {{ picture.position }}, object-fit: {{ picture.fit }}">
	</picture>
{% endmacro %}
