{% macro picture(classes, sources, alt, width, height, fit) %}
	<picture>
		{% for src in sources %}
			{% if src.type == 'avif' %}
				<source srcset="src/assets/images/{{ src.avif }}?format=avif" type="image/avif">
			{% elseif src.type == 'webp' %}
				<source srcset="src/assets/images/{{ src.webp }}?format=webp" type="image/webp">
			{% elseif src.type == 'jpg' %}
				<source srcset="src/assets/images/{{ src.jpg }}?format=jpg" type="image/jpg">
			{% elseif src.type == 'png' %}
				<source srcset="src/assets/images/{{ src.png }}?format=png" type="image/png">
			{% endif %}
		{% endfor %}
		<img class="{{ classes }}" src="/src/assets/images/{{ sources[sources|length - 1].png }}" alt="{{ alt }}" loading="lazy" decoding="async" width="{{ width }}" height="{{ height }}" style="object-position:{{ fit }}">
	</picture>
{% endmacro %}
