<section class="overview">
	<h2 class="overview__tittle">{{ overview.title }}</h2>

	{% for faq in overview.faqs %}
		<details class="overview__item" {% if faq.open %} open {% endif %}>
			<summary class="overview__question">{{ faq.question }}</summary>
			<span>{{ faq.open ? 'âˆ’' : '+' }}</span>

			{% if faq.answer %}
				<hr class="overview__divider"/>
				<p class="overview__answer">
					{% if faq.term %}
						<span class="overview__term overview__term--color">{{ faq.term }}</span>
					{% endif %}
					{{ faq.answer }}
				</p>
			{% endif %}
		</details>
	{% endfor %}
</section>


